@page
@model WebClient.Pages.Admin.News.AddModel
@{
    ViewData["Title"] = "Add New News";
}

<div class="container mt-4">
    <h1>Add New New</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <input type="hidden" asp-for="New.NewsId" />
                <div class="form-group">
                    <label asp-for="New.Title" class="control-label"></label>
                    <input asp-for="New.Title" class="form-control" />
                    <span asp-validation-for="New.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="New.Content" class="control-label"></label>
                    <textarea asp-for="New.Content" class="form-control"></textarea>
                    <span asp-validation-for="New.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="New.Author" class="control-label"></label>
                    <input asp-for="New.Author" class="form-control" />
                    <span asp-validation-for="New.Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="New.PublishedDate" class="control-label"></label>
                    <input asp-for="New.PublishedDate" class="form-control" type="date" />
                    <span asp-validation-for="New.PublishedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="New.ImageUrl" class="control-label"></label>
                    <input asp-for="New.ImageUrl" class="form-control" />
                    <span asp-validation-for="New.ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="New.IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="New.IsActive" class="form-check-label"></label>
                    <span asp-validation-for="New.IsActive" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./List" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}