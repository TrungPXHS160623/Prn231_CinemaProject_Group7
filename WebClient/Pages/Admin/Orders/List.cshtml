@page
@model WebClient.Pages.Admin.Coupons.ListModel
@{
    ViewData["Title"] = "Coupon List";
}

<h1>Coupon List</h1>

<div class="table-responsive">
    <table class="table table-bordered data-table">
        <thead class="thead-dark">
            <tr>
                <th>Code</th>
                <th>Discount</th>
                <th>Expiration Date</th>
                <th>Is Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coupon in Model.Coupons)
            {
                <tr>
                    <td>@coupon.Code</td>
                    <td>@coupon.Discount</td>
                    <td>@coupon.ExpirationDate?.ToString("yyyy-MM-dd")</td>
                    <td>@coupon.IsActive</td>
                    <td>
                        <a asp-page="./Update" asp-route-id="@coupon.Code" class="btn btn-primary">Edit</a>
                        <button class="btn btn-danger" onclick="deleteCoupon('@coupon.Code')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-page="./Add" class="btn btn-success">Add New Coupon</a>

@section Scripts {
    <script>
        async function deleteCoupon(code) {
            if (confirm('Are you sure you want to delete this coupon?')) {
                window.location.href = `/Admin/Coupons/Delete?code=${code}`;
            } else {
                alert('Failed to delete the coupon.');
            }
        }
    </script>
}

<style>

    .table tbody {
        display: block;
        overflow-y: auto;
        height: 400px;
    }

    .table thead, .table tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }
</style>