@page
@model WebClient.Pages.Admin.Orders.UpdateConcessionModel
@{
    ViewData["Title"] = "Update Order Concession";
}

<div class="container mt-4">
    <h1>Add New Order Concession</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <input asp-for="OrderConcession.OrderId" type="hidden" />
                <input asp-for="OrderConcession.OrderConcessionId" type="hidden" />
                <div class="form-group">
                    <label asp-for="OrderConcession.ConcessionId" class="control-label"></label>
                    <select asp-for="OrderConcession.ConcessionId" class="form-control">
                        <option value="">Select Concession</option>
                        @foreach (var concession in Model.Concessions)
                        {
                            <option value="@concession.ProductId">@concession.ProductName</option>
                        }
                    </select>
                    <span asp-validation-for="OrderConcession.ConcessionId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderConcession.Quantity" class="control-label"></label>
                    <input asp-for="OrderConcession.Quantity" class="form-control" type="number" min="1" max="50" value="1" />
                    <span asp-validation-for="OrderConcession.Quantity" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./List" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}