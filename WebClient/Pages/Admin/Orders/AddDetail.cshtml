@page
@model WebClient.Pages.Admin.Orders.AddDetailModel
@{
    ViewData["Title"] = "Add New Order Detail";
}
<div class="container mt-4">
    <h1>Add New Order Detail</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <label asp-for="OrderDetail.OrderId" class="control-label"></label>
                    <input asp-for="OrderDetail.OrderId" class="form-control" type="number" />
                    <span asp-validation-for="OrderDetail.OrderId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderDetail.ShowtimeId" class="control-label"></label>
                    <input asp-for="OrderDetail.ShowtimeId" class="form-control" type="number" />
                    <span asp-validation-for="OrderDetail.ShowtimeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderDetail.SeatId" class="control-label"></label>
                    <input asp-for="OrderDetail.SeatId" class="form-control" type="number" />
                    <span asp-validation-for="OrderDetail.SeatId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderDetail.Quantity" class="control-label"></label>
                    <input asp-for="OrderDetail.Quantity" class="form-control" type="number" />
                    <span asp-validation-for="OrderDetail.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrderDetail.Price" class="control-label"></label>
                    <input asp-for="OrderDetail.Price" class="form-control" type="number" step="1000" />
                    <span asp-validation-for="OrderDetail.Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./List" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}