@page
@model WebClient.Pages.Admin.Concessions.AddModel
@{
    ViewData["Title"] = "Add New Concession";
}

<div class="container mt-4">
    <h1>Add New Concession</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Concession.ProductName" class="control-label"></label>
                    <input asp-for="Concession.ProductName" class="form-control" />
                    <span asp-validation-for="Concession.ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concession.Description" class="control-label"></label>
                    <input asp-for="Concession.Description" class="form-control" />
                    <span asp-validation-for="Concession.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concession.Price" class="control-label"></label>
                    <input asp-for="Concession.Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Concession.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concession.StockQuantity" class="control-label"></label>
                    <input asp-for="Concession.StockQuantity" class="form-control" type="number" />
                    <span asp-validation-for="Concession.StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./List" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}