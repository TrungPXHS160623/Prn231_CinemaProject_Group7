@{
    var currentPath = ViewContext.HttpContext.Request.Path;
    if (currentPath.StartsWithSegments("/Admin", StringComparison.OrdinalIgnoreCase))
    {
        Layout = "_AdminLayout";
    }
    if (currentPath.StartsWithSegments("/Staff", StringComparison.OrdinalIgnoreCase))
    {
        Layout = "_StaffLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}

